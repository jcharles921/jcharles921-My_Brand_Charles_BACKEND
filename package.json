{
  "name": "my_brand_charles_backend",
  "version": "1.0.0",
  "description": "Its the API of my portfolio",
  "main": "./src/server.js",
  "type": "module",
  "scripts": {
    "start":"better-npm-run prod",
    "test": "better-npm-run test",
    "dev": "better-npm-run dev",
    "prod": "echo \"Error: no test specified\" && exit 1"
  },
  "betterScripts": {
    "dev": {
      "command": "nodemon ./src/app.js",
      "env": {
        "ENV": "development",
        "PORT": 5000
      }
    },
    "test": {
      "command": "nodemon ./src/app.js",
      "env": {
        "ENV": "test",
        "PORT": 3000
      }
    },
    "prod": {
      "command": "node /src/app.js",
      "env": {
        "ENV": "production"
      }
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jcharles921/My_Brand_Charles_Backend.git"
  },
  "keywords": [
    "Back_End"
  ],
  "author": "Charles",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jcharles921/My_Brand_Charles_Backend/issues"
  },
  "homepage": "https://github.com/jcharles921/My_Brand_Charles_Backend#readme",
  "dependencies": {
    "@types/jest": "^29.4.0",
    "@types/supertest": "^2.0.12",
    "bcrypt": "^5.1.0",
    "better-npm-run": "^0.1.1",
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "jest": "^29.4.3",
    "jsonwebtoken": "^9.0.0",
    "mongoose": "^6.10.0",
    "supertest": "^6.3.3",
    "ts-jest": "^29.0.5"
  },
  "devDependencies": {
    "morgan": "^1.10.0",
    "nodemon": "^2.0.20"
  }
}
